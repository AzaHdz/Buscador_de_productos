<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Favoritos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/styles.css">
  <script src="https://kit.fontawesome.com/ee3bd84ca1.js"></script>
</head>

<body>
  <div class="container-fluid">
    <form class="in-line buscador" action="/products" method="post">
      <div class="input-group mb-3">
        <input type="text" name="item" class="form-control" placeholder="Buscar productos" aria-label="Recipient's username" aria-describedby="button-addon2">
        <button class="btn btn-primary" type="submit" id="button-addon2">Buscar</button>
      </div>
    </form>
    <h5>Favoritos</h5>
    <table class="table table-hover ">
      <thead>
        <tr>
          <th scope="col">Imagen</th>
          <th scope="col">Producto</th>
          <th scope="col">Precio</th>
          <th scope="col">Favoritos</th>
        </tr>
      </thead>
      <tbody>
        <% listItems.forEach(function(product){ %>
          <tr>
            <form class="" action="/delete" method="post">
              <th scope="row"><img src="<%= product.imgURL %>" alt="" class="img"></th>
              <td><%= product.name %></td>
              <td>$<%= product.price %></td>
              <td><button class="btn btn-outline-warning" type="submit" name="id" value="<%= product._id %>" id="button-addon2">Eliminar</button></td>
            </form>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>

</html>
