<%- include('partials/header') %>

  <div class="container-fluid">
    <form class="in-line buscador" action="/products" method="post">
      <div class="input-group mb-3">
        <input type="text" name="item" class="form-control" placeholder="Buscar productos" aria-label="Recipient's username" aria-describedby="button-addon2">
        <button class="btn btn-primary" type="submit" id="button-addon2">Buscar</button>
      </div>
    </form>
    <h5>Favoritos</h5>
    <table class="table table-hover ">
      <thead>
        <tr>
          <th scope="col">Imagen</th>
          <th scope="col">Producto</th>
          <th scope="col">Precio</th>
          <th scope="col">Favoritos</th>
        </tr>
      </thead>
      <tbody>
        <% listItems.forEach(function(product){ %>
          <tr>
            <form class="" action="/delete" method="post">
              <th scope="row"><img src="<%= product.imgURL %>" alt="" class="img"></th>
              <td><%= product.name %></td>
              <td>$<%= product.price %></td>
              <td><button class="btn btn-outline-warning" type="submit" name="id" value="<%= product._id %>" id="button-addon2">Eliminar</button></td>
            </form>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  
<%- include('partials/footer') %>
